

conky.config = {

	--Various settings

	background = true,
	cpu_avg_samples = 2,
	diskio_avg_samples = 10,
	double_buffer = true,
	if_up_strictness = 'address',
	net_avg_samples = 1,
	no_buffers = true,
	temperature_unit = 'celsius',
	update_interval = 1,
	imlib_cache_size = 0,

	--Placement

	alignment = 'top_right',
	gap_x = 20,
	gap_y = 120,
	minimum_height = 750,
	minimum_width = 360,
	maximum_width = 360,

	--Graphical

	border_inner_margin = 10,
	border_outer_margin = 20,
	draw_borders = false,
	draw_graph_borders = false,
	draw_shades = false,
	draw_outline = false,

	--Textual
	
	format_human_readable = true,
	font = 'ubuntu:size=11:bold',
	max_text_width = 0,
	override_utf8_locale = true,
	short_units = true,
	use_xft = true,
	xftalpha = 1,

	--Windows

	own_window = true,
	own_window_argb_value = 150,
	own_window_argb_visual = true,
	own_window_type = 'desktop',-- # options are: normal/override/dock/desktop/panel
	

	--Colours

	default_color = '#FFFFFF',  				-- default color and border color
	color1 = '#06d6a0', 						-- title_color
	color2 = '#669bbc',						    -- sub title elements
	color3 = '#ef476f',						    -- graphs and bars
	color4 = '#073b4c',
	color5 = '#ffd166',
};


conky.text = [[
#--------------------Clock
